<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_study_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.codingcrew.campusconnection.NewStudyEvent"
    android:background="@color/maroon">

    <Button
        android:text="12 : 00"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/endTime"
        android:textStyle="normal|bold"
        android:textColor="@android:color/darker_gray"
        android:layout_alignBaseline="@+id/beginTime"
        android:layout_alignBottom="@+id/beginTime"
        android:layout_centerHorizontal="true" />



    <TextView
        android:text="Begin"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/beginText"
        android:textStyle="normal|bold"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@+id/courseNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp"/>

    <TextView
        android:text="End"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/endText"
        android:textStyle="normal|bold"
        android:textColor="@android:color/darker_gray"
        android:layout_alignBaseline="@+id/beginText"
        android:layout_alignBottom="@+id/beginText"
        android:layout_alignLeft="@+id/endTime"
        android:layout_alignStart="@+id/endTime"/>

    <Button
        android:text="12 : 00"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/beginTime"
        android:textStyle="normal|bold"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@+id/beginText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="Pay?"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/payText"
        android:textColor="@android:color/darker_gray"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"/>
    <EditText
        android:layout_height="wrap_content"
        android:id="@+id/coursePrefix"
        android:textSize="20sp"
        android:hint="Prefix"
        android:width="250dp"
        android:background="@drawable/textboxstyle1"
        android:layout_width="60dp"
        android:textColor="@color/black"
        android:layout_alignBaseline="@+id/courseNumber"
        android:layout_alignBottom="@+id/courseNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="number"
        android:layout_alignRight="@+id/payBox"
        android:layout_alignEnd="@+id/payBox"
        android:textColorHint="#979e9797"/>

    <EditText
        android:hint="Extra Information"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:inputType="text|textMultiLine"
        android:ems="10"
        android:id="@+id/extraInfo"
        android:background="@drawable/textboxstyle1"
        android:textColorHint="#979e9797"
        android:textColor="@color/black"
        android:layout_below="@+id/textLocation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:layout_above="@+id/createEvent"
        android:layout_alignRight="@+id/createEvent"
        android:layout_alignEnd="@+id/createEvent"
        android:gravity="top"/>

    <Button
        android:text="Create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createEvent"
        android:background="@drawable/button"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/maxResponders"
        android:layout_alignEnd="@+id/maxResponders"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/textLocation"
        android:background="@drawable/textboxstyle1"
        android:textColorHint="#979e9797"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/payBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/extraInfo"
        android:layout_alignEnd="@+id/extraInfo"
        android:hint="Location"/>

    <EditText
        android:layout_height="wrap_content"
        android:id="@+id/courseNumber"
        android:textSize="20sp"
        android:hint="Course #"
        android:background="@drawable/textboxstyle1"
        android:textColorHint="#979e9797"
        android:textColor="@android:color/black"
        android:inputType="text"
        android:layout_marginTop="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/endText"
        android:layout_alignStart="@+id/endText"
        android:layout_width="120dp"/>

    <TextView
        android:text="Max Responders?"
        android:textStyle="normal|bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maxText"
        android:textSize="30sp"
        android:textColor="@android:color/darker_gray"
        android:layout_above="@+id/payText"
        android:layout_marginBottom="46dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/payBox"
        android:layout_alignBottom="@+id/payText"
        android:layout_toRightOf="@+id/beginText"
        android:layout_toEndOf="@+id/beginText"
        android:visibility="invisible"/>

    <EditText
        android:background="@drawable/textboxstyle1"
        android:textColorHint="#979e9797"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:inputType="number"
        android:id="@+id/maxResponders"
        android:singleLine="false"
        android:textColor="@color/black"
        android:hint="######"
        android:layout_alignBottom="@+id/maxText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"/>

</RelativeLayout>
